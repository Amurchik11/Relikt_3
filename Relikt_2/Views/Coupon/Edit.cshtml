@model Relikt_2_Models.Coupon
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Редактировать Купон</h2>
<br />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class=" row backgroundWhiteBorder">

        <br />
        <div class="col-12 border">
            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
            }
            <img src="@imgsrc" style="width:100%; height:100%" />
        </div>
        <div class="col-12 pt-4">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row py-2">
                <div class="col-2">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row py-2">
                <div class="col-2">
                    <label asp-for="Picture" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input type="file" id="projectImage" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-2">
                    <label asp-for="CouponType" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-select"></select>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-2">
                    <label asp-for="Discount" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Discount" class="form-control" />
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group row py-2">
                <div class="col-2">
                    <label asp-for="MinimumAmount" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="MinimumAmount" class="form-control" />
                </div>
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label class="col-form-label" asp-for="IsActive"></label>
                </div>
                <div class="col-5" align="center">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" style="transform:scale(2.0)">
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Обновить" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">
                            <i class="fas fa-sign-out-alt"></i>
                            Вернуться
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
